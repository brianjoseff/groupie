-form_for(:user, :url => users_path) do |f|
	%p.field
		=f.label :name
		=f.text_field :name
	
	%p.field
		=f.label :email
		=f.text_field :email
	
	%p.field
		=f.label :password
		=f.password_field :password
	
	%p.field
		=f.label :password_confirmation
		=f.password_field :password_confirmation
	
	%p.actions
		=f.submit "Sign up"

