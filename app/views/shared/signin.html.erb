<h1>Sign in</h1>

<% form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email%>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="action">
		<%= f.submit "sign in"%>
	</div>
<% end %>

<h2>New user? <%= link_to "Sign up!", signup_path %></h2>