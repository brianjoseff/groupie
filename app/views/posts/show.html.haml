.content
	=image_tag(@post.post_images.first.nil?  ? '/assets/post-thumb.png': @post.post_images.first.image.url(:medium), :alt => @post.name)
	%p
		%b Name:
		=@post.name
	%p
		%b Borrow?:
		=@post.borrow
	%p
		%b Price:
		$#{@post.price}
	%p
		%b Description:
		=@post.description
	/=render :controller => :emails, :action => :new
	%br
	%p
		%h1 Interested? email them:
	=render :partial => 'shared/email'
	/=render :partial => 'emails/new'
	-if @post.user == current_user
		.special_link2
			=link_to 'Edit', edit_post_path(@post)
			=link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete
=render :partial => 'shared/side_nav'