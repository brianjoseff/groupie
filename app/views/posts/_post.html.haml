%div.result
	%div.image
		=link_to image_tag(post.post_images.empty?  ? '/assets/post-thumb.png': post.post_images.first.image.url(:thumb), :alt => post.name), post_url(post)
	%div.data
		%div.title
			=link_to post.name, post_url(post)
		%div.price
			%p $#{post.price}
		%div.description
			=truncate(post.description,10)
		-if post.user == current_user
			=link_to 'Edit', edit_post_path(post)
			=link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete
