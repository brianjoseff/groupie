%div.small_result
	%div.small_image
		=link_to image_tag(small_post.image.url(:thumb), :alt => small_post.name), post_url(small_post)
	%div.small_data
		%div.small_title
			=link_to small_post.name, post_url(small_post)
		%div.small_price
			%p $#{small_post.price}
		-if small_post.user == current_user
			=link_to 'Edit', edit_post_path(small_post)
			=link_to 'Destroy', small_post, :confirm => 'Are you sure?', :method => :delete